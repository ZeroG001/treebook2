<h1 class="page-header"> All of the Statuses </h1>



<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <p><%= status.content %> </p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + ' ago', status %> 
    <span class="admin">
      |<%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: {configm: 'are you sure you want to delete?'} %>
      
    </span>
  </div>
</div>

<% end %>

<%= link_to "New Status", new_status_path, :class=>"btn btn-primary btn-lg" %>

